@model HRMS.Core.Entities.Employee
@{
    ViewData["Title"] = "Create Employee";
}

<h2>Create Employee</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Department</label>
        <select asp-for="DepartmentId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Departments, "Id", "Name"))"></select>
    </div>
    <div class="form-group">
        <label>Role</label>
        <select asp-for="RoleId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Roles, "Id", "RoleName"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="DateOfJoining"></label>
        <input asp-for="DateOfJoining" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
