@model IEnumerable<HRMS.Core.Entities.LeaveRequest>

<h2>Leave Requests</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Apply Leave</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Employee</th>
            <th>Start</th>
            <th>End</th>
            <th>Reason</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var leave in Model)
        {
            <tr>
                <td>@leave.Employee?.FirstName @leave.Employee?.LastName</td>
                <td>@leave.StartDate.ToShortDateString()</td>
                <td>@leave.EndDate.ToShortDateString()</td>
                <td>@leave.Reason</td>
                <td>@leave.Status</td>
                <td>
                    @if (leave.Status == HRMS.Core.Enums.LeaveStatus.Pending)
                    {
                        <a asp-action="Approve" asp-route-id="@leave.Id" class="btn btn-success btn-sm">Approve</a>
                        <a asp-action="Reject" asp-route-id="@leave.Id" class="btn btn-danger btn-sm">Reject</a>
                    }
                    <a asp-action="Delete" asp-route-id="@leave.Id" class="btn btn-warning btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
