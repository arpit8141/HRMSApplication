@model IEnumerable<HRMS.Core.Entities.Attendance>

<h2>Attendance Records</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add Attendance</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Employee</th>
            <th>Check In</th>
            <th>Check Out</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Employee?.FirstName @a.Employee?.LastName</td>
                <td>@a.CheckIn.ToString("g")</td>
                <td>@(a.CheckOut?.ToString("g") ?? "Not Checked Out")</td>
                <td>@a.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@a.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@a.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
