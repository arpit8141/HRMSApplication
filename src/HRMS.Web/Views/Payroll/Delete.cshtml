@model HRMS.Core.Entities.Payroll

<h2>Delete Payroll</h2>

<p>Are you sure you want to delete this payroll record?</p>

<div>
    <strong>@Model.Employee?.FirstName @Model.Employee?.LastName</strong> -
    @Model.Month.ToString("MMMM yyyy")
    Net Salary: <strong>@Model.NetSalary</strong>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
