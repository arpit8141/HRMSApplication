@model HRMS.Core.Entities.Payroll

<h2>Edit Payroll</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label>Employee</label>
        <select asp-for="EmployeeId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Employees, "Id", "FirstName"))">
        </select>
    </div>

    <div class="mb-3">
        <label>Month</label>
        <input asp-for="Month" type="month" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Basic Salary</label>
        <input asp-for="BasicSalary" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Allowances</label>
        <input asp-for="Allowances" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Deductions</label>
        <input asp-for="Deductions" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Net Salary</label>
        <input value="@(Model.BasicSalary + Model.Allowances - Model.Deductions)"
               class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
